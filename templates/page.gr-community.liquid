{% layout 'theme' %}

<div class="page-width">
  <div class="gr-community-page">
    <header class="gr-community-header">
      <h1>{{ page.title }}</h1>
      {% if page.content != blank %}
        <div class="gr-community-description">
          {{ page.content }}
        </div>
      {% endif %}
    </header>
    
    {% section 'gr-community-posts' %}
  </div>
</div>

<style>
  .gr-community-page {
    margin: 40px 0;
  }
  
  .gr-community-header {
    text-align: center;
    margin-bottom: 30px;
  }
  
  .gr-community-header h1 {
    margin-bottom: 15px;
    color: {{ settings.gr_color_principal }};
  }
  
  .gr-community-description {
    max-width: 800px;
    margin: 0 auto;
  }
</style>
