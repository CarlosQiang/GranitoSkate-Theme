{% comment %}
  @name: GR Título de Sección
  @description: Componente de título personalizable para secciones
  @author: v0
{% endcomment %}

<div class="gr-titulo-seccion" data-section-id="{{ section.id }}" data-section-type="titulo-seccion">
  <div class="page-width">
    <div class="gr-titulo-seccion-wrapper" style="text-align: {{ section.settings.alignment }};">
      {% if section.settings.title != blank %}
        <h2 class="gr-titulo-seccion-heading" style="font-size: {{ section.settings.title_size }}px; color: {{ section.settings.title_color }};">
          {{ section.settings.title | escape }}
        </h2>
      {% endif %}
      
      {% if section.settings.subtitle != blank %}
        <div class="gr-titulo-seccion-subtitle" style="font-size: {{ section.settings.subtitle_size }}px; color: {{ section.settings.subtitle_color }};">
          {{ section.settings.subtitle }}
        </div>
      {% endif %}
      
      {% if section.settings.show_divider %}
        <div class="gr-titulo-seccion-divider" style="background-color: {{ section.settings.divider_color }}; width: {{ section.settings.divider_width }}%;"></div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .gr-titulo-seccion {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
  
  .gr-titulo-seccion-wrapper {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
  }
  
  .gr-titulo-seccion-heading {
    margin: 0 0 {{ section.settings.spacing }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.2;
  }
  
  .gr-titulo-seccion-subtitle {
    margin: 0 0 {{ section.settings.spacing }}px;
    font-weight: {{ section.settings.subtitle_weight }};
    line-height: 1.5;
  }
  
  .gr-titulo-seccion-divider {
    height: 3px;
    margin: 0 auto {{ section.settings.spacing }}px;
  }
  
  @media screen and (max-width: 749px) {
    .gr-titulo-seccion-heading {
      font-size: {{ section.settings.title_size | times: 0.8 }}px !important;
    }
    
    .gr-titulo-seccion-subtitle {
      font-size: {{ section.settings.subtitle_size | times: 0.9 }}px !important;
    }
  }
</style>

{% schema %}
{
  "name": "GR Título de Sección",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Título de la sección"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Tamaño del título",
      "default": 36
    },
    {
      "type": "select",
      "id": "title_weight",
      "label": "Peso del título",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medio"
        },
        {
          "value": "600",
          "label": "Semi-negrita"
        },
        {
          "value": "700",
          "label": "Negrita"
        }
      ],
      "default": "600"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Color del título",
      "default": "#000000"
    },
    {
      "type": "richtext",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "<p>Añade un subtítulo descriptivo aquí</p>"
    },
    {
      "type": "range",
      "id": "subtitle_size",
      "min": 14,
      "max": 28,
      "step": 1,
      "unit": "px",
      "label": "Tamaño del subtítulo",
      "default": 16
    },
    {
      "type": "select",
      "id": "subtitle_weight",
      "label": "Peso del subtítulo",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medio"
        }
      ],
      "default": "400"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Color del subtítulo",
      "default": "#666666"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "label": "Mostrar divisor",
      "default": true
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "Color del divisor",
      "default": "#d29a43"
    },
    {
      "type": "range",
      "id": "divider_width",
      "min": 10,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Ancho del divisor",
      "default": 50
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alineación",
      "options": [
        {
          "value": "left",
          "label": "Izquierda"
        },
        {
          "value": "center",
          "label": "Centro"
        },
        {
          "value": "right",
          "label": "Derecha"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Ancho máximo",
      "default": 800
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 10,
      "max": 40,
      "step": 5,
      "unit": "px",
      "label": "Espaciado entre elementos",
      "default": 20
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Color de fondo",
      "default": "rgba(0,0,0,0)"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Relleno superior",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Relleno inferior",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "GR Título de Sección",
      "category": "Texto"
    }
  ]
}
{% endschema %}
